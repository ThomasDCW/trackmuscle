generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  name      String?    @unique
  trainings Training[] 
}

model Training {
  id     Int    @id @default(autoincrement())
  name   String
  userId Int
  user   User   @relation(fields: [userId], references: [id])
  exerciseId Int
  exercise Exercise @relation(fields: [exerciseId], references: [id])
}

model Exercise {
  id        Int        @id @default(autoincrement())
  name      String
  trainings Training[] 
}
